      max-width: 500px;
      margin: 80px auto;
    }

    h1 {
      margin-bottom: 20px;
      font-size: 26px;
      color: #4db8ff;
    }

    p {
      margin-bottom: 30px;
      font-size: 18px;
    }

    a {
      display: inline-block;
      text-decoration: none;
      color: #fff;
      background-color: #4db8ff;
      padding: 10px 24px;
      border-radius: 8px;
      font-weight: bold;
      transition: background-color 0.3s ease;
    }

    a:hover {
      background-color: #3399dd;
    }
  </style>
