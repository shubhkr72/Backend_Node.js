<%- include('partials/head') %>
<%- include('partials/nav') %>

<style>
  body {
    background-color: #1e1e2f;
    font-family: 'Segoe UI', sans-serif;
    margin: 0;
    padding: 0;
  }

  h1 {
    text-align: center;
    color: #ffffff;
    margin-top: 30px;
  }

  #link {
    text-align: center;
    margin-top: 20px;
  }

  #link a {
    color: #4db8ff;
    text-decoration: none;
    font-weight: bold;
    padding: 10px 20px;
    background-color: #2c2c3c;
    border-radius: 8px;
    transition: background-color 0.2s;
  }

  #link a:hover {
    background-color: #444;
  }

  /* Container for all cards */
  .card-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 20px;
    padding: 30px;
  }

  .home-card {
    background-color: #2c2c3c;
    border: 1px solid #444;
    border-radius: 12px;
    width: 30%;
    min-width: 280px;
    max-width: 320px;
    overflow: hidden;
    box-shadow: 0 6px 16px rgba(0, 0, 0, 0.4);
    color: #e0e0e0;
    transition: transform 0.3s ease;
    text-align: center;
  }

  .home-card:hover {
    transform: scale(1.02);
  }

  .home-photo {
    width: 100%;
    height: 200px;
    object-fit: cover;
    background-color: #1f1f2f;
  }

  .home-info {
    padding: 16px;
  }

  .home-title {
    margin: 0 0 10px;
    font-size: 20px;
    color: #4db8ff;
  }

  .rent-btn {
    margin-top: 12px;
    display: inline-block;
    background-color: #4db8ff;
    color: #fff;
    padding: 8px 16px;
    border-radius: 6px;
    text-decoration: none;
    font-weight: bold;
    transition: background-color 0.3s ease;
  }

  .rent-btn:hover {
    background-color: #3399dd;
  }

  @media (max-width: 900px) {
    .home-card {
      width: 45%;
    }
  }

  @media (max-width: 600px) {
    .home-card {
      width: 90%;
    }
  }
</style>

</head>
<body>

  <div>
    <h1>Welcome Shubham</h1>
  </div>

  <div id="link">
    <a href="/host/add-home">+ Register a Home</a>
  </div>

  <div>
    <h1>Here Are Listed Homes</h1>
    <div class="card-grid">
      <% RegisteredHomes.forEach((home) => { %>
        <div class="home-card">
          <!-- <img class="home-photo" src="<%= home.photo %>" alt="House Photo" /> -->
           <!-- <img src="https://picsum.photos/id/1015/400/300" alt="House Image" /> -->
            <img src="https://picsum.photos/400/300" alt="Random House Image" />


          <div class="home-info">
            <h2 class="home-title"><%= home.HouseName %></h2>
            <p><strong>Owned by:</strong> <%= home.OwnerName %></p>
            <p><strong>Location:</strong> <%= home.Location %></p>
            <p><strong>Price per night:</strong> ₹<%= home.Rate %></p>
            <p><strong>Rating:</strong> ⭐ <%= home.Rating %></p>
            <a href="/home/<%= home._id %>" class="rent-btn">Details</a>
            <button style="background-color: chartreuse;">Book</button>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <%- include('partials/footer') %>
</body>
</html>

